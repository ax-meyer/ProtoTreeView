<UserControl x:Class="ProtoTreeView.ProtoTreeViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProtoTreeView"
			 xmlns:sd="clr-namespace:ICSharpCode.TreeView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<sd:SharpTreeView x:Name="treeView1"
                              AllowDrop="True"
                              AllowDropOrder="True"
							  Root="{Binding}"
							  ShowAlternation="True"
							  >
		<ListView.View>
			<sd:SharpGridView>
				<GridView.Columns>
					<GridViewColumn Header="Object">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<sd:SharpTreeNodeView />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="Value">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding FieldValue}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="Type">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding DataType}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView.Columns>
			</sd:SharpGridView>
		</ListView.View>
	</sd:SharpTreeView>
</UserControl>
